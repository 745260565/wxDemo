<!--pages/text/text.wxml-->
<text>hello word\n</text>
<text>132\n</text>

<!-- selectable: true -->
<!-- 默认情况下text中的文本长按是不能选中的 -->
<text selectable="{{true}}">helloWorld\n</text>
<text selectable>helloWorld\n</text>

<!-- space 决定文本空格的大小  默认nbsp-->
<!-- emsp 一个中文符空格大小 ensp 中文字符空格一半大小 -->
<text>hello world\n</text>
<text space="nbsp">hello world\n</text>
<text space="emsp">hello world\n</text>
<text space="ensp">hello world\n</text>

<!-- decode属性：是否解码文本 -->
<text decode>5 &gt; 3</text>
