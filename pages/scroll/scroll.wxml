<!-- 水平滚动 -->
<scroll-view class="contener1" scroll-x>
  <view wx:for="{{10}}" class="item1">{{item}}</view>
</scroll-view>

<!-- 垂直滚动 -->
<scroll-view class="contener2" scroll-y>
  <view wx:for="{{10}}" class="item2">{{item}}</view>
</scroll-view>

<!-- 补充 -->
<scroll-view class="contener2" scroll-y bindscroll="handleScroll">
  <view wx:for="{{10}}" class="item2">{{item}}</view>
</scroll-view>